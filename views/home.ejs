<style>
    /* Banner Section Styles */
    .banner-section {
        margin-top: 20px;
        padding: 20px 0;
    }

    .banner {
        position: relative;
        border-radius: 10px;
        overflow: hidden;
    }

    .banner img {
        width: 100%;
        height: auto;
        border-radius: 10px;
    }

    .banner-details {
        position: absolute;
        bottom: 20px;
        left: 20px;
        color: #fff;
        padding: 20px;
        border-radius: 5px;
        max-width: 400px;
    }

    .banner-title {
        font-size: 24px;
        font-weight: bold;
        margin: 0;
        animation: fadeInUp 1s ease-out;
    }

    .banner-subtitle {
        font-size: 18px;
        margin: 5px 0;
        animation: fadeInUp 1.2s ease-out;
    }

    .banner-description {
        font-size: 16px;
        margin: 10px 0;
        animation: fadeInUp 1.6s ease-out;
    }

    .btn-primary {
        background-color: #4CAF50;
        border: none;
        padding: 10px 20px;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #45a049;
    }

    .carousel-item {
        transition: transform 2s ease, opacity 2s ease; /* Smooth transition */
    }

    /* Keyframe Animations */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Product Section */
    .product-details {
        text-align: center;
    }

    .product-price .current-price {
        font-weight: bold;
        color: #28a745;
    }

    .product-price .original-price {
        text-decoration: line-through;
        color: #888;
    }
    .btn {
        z-index: 10; /* Ensure it's higher than the carousel or other elements */
        position: relative; /* Ensure it responds correctly to z-index */
    }
</style>

<!-- Banner Section -->
<section class="banner-section mt-5">
    <div class="container">
        <% if (banners.length > 0) { %>
        <div id="bannerCarousel" class="carousel">
            <div class="carousel-inner">
                <% banners.forEach((banner, index) => { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                    <img class="d-block w-100" src="/images/products/<%= banner.imageUrl %>" alt="<%= banner.title %>">
                    <div class="banner-details">
                        <h3 class="banner-title">SALE UP TO 30% OFF</h3>
                        <h4 class="banner-subtitle mt-5"><%= banner.description %></h4>
                        <p class="banner-description">The Real Taste And Boost Your Day With The Power</p>
                        <a href="/products/list" class="btn btn-primary">Shop Now</a>
                    </div>
                </div>
                <% }) %>
            </div>
            <!-- Carousel controls -->
            <a class="carousel-control-prev" href="#bannerCarousel" role="button">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#bannerCarousel" role="button">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <% } %>
    </div>
</section>

